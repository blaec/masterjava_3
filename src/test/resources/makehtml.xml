<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
                xmlns:p="http://javaops.ru"
                version="1.0">

    <xsl:template match="/">
        <html>

            <head>
                <style type="text/css">
                    table.tfmt {
                    border: 1px ;
                    }

                    td.colfmt {
                    border: 1px ;
                    background-color: white;
                    color: black;
                    text-align:right;
                    }

                    th {
                    background-color: #2E9AFE;
                    color: white;
                    }

                </style>
            </head>

            <body>
                <xsl:param name="projectName" />
                <h1><xsl:value-of select="$projectName"/> groups</h1>
                <table class="tfmt">
                    <tr>
                        <th style="width:250px">Group:</th>
                        <th style="width:350px">Type:</th>
                    </tr>

                    <xsl:for-each select="/p:Payload/p:Projects/p:Project/p:Group[@name[contains(.,$projectName)]]">
                        <tr>
                            <td class="colfmt">
                                <xsl:value-of select="@name"/>
                            </td>
                            <td class="colfmt">
                                <xsl:value-of select="@type"/>
                            </td>
                        </tr>
                    </xsl:for-each>
                </table>
            </body>
        </html>
    </xsl:template>
</xsl:stylesheet>